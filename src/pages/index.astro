---
import Accesories from '../components/Accesories.astro'
import HeroSection from '../components/HeroSection.astro'
import Header from '../components/Header.astro'
import ModelS from '../components/ModelS.astro'
import ModelThree from '../components/ModelThree.astro'
import ModelX from '../components/ModelX.astro'
import ModelY from '../components/ModelY.astro'
import SolarPanels from '../components/SolarPanels.astro'
import SolarRoof from '../components/SolarRoof.astro'

import Layout from '../layouts/Layout.astro'
---

<Layout title="Electric Cars, Solar & Clean Energy | Tesla">
  <Header />

  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-x-hidden scroll-smooth"
  >
    <div class="snap-center">
      <HeroSection />
    </div>
    <div class="snap-center">
      <ModelThree />
    </div>
    <div class="snap-center">
      <ModelY />
    </div>
    <div class="snap-center">
      <ModelS />
    </div>
    <div class="snap-center">
      <ModelX />
    </div>
    <div class="snap-center">
      <SolarPanels />
    </div>
    <div class="snap-center">
      <SolarRoof />
    </div>
    <div class="snap-center">
      <Accesories />
    </div>
  </main>
</Layout>
