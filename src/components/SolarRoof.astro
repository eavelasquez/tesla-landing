---
import Section from './Section.astro'
---

<Section
  id="solar-roof"
  color="black"
  title="Solar Roof"
  subtitle="Produce Clean Energy From Your Roof"
>
  <div slot="footer" class="gap-x-6 flex mx-auto">
    <a
      class="border-[3px] border-gray-800 bg-gray-800 text-sm rounded font-medium text-white px-16 py-2 inline-block transition-colors hover:border-gray-500 hover:bg-gray-500"
      href="#"
    >
      Order Now
    </a>

    <a
      class="bg-white text-sm rounded font-medium px-12 py-2 transition-colors hover:bg-black hover:text-white inline-flex justify-center items-center text-black"
      href="#"
    >
      Learn More
    </a>
  </div>

  <img
    slot="background"
    class="h-full w-full object-cover object-center"
    id="bg-image-solar-roof"
    src="/assets/solar-roof.avif"
    alt="Solar Roof"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf('Edge') > -1 ||
      navigator.userAgent.indexOf('Edg') > -1
    ) {
      return true
    }
    return false
  }

  const $imageElement = document.querySelector(
    '#bg-image-solar-roof'
  ) as HTMLImageElement

  if (isEdge()) {
    $imageElement.src = '/assets/solar-roof.webp'
  } else {
    $imageElement.src = '/assets/solar-roof.avif'
  }
</script>
